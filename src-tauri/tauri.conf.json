{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Data Analyzer Pro",
  "version": "2.1.0",
  "identifier": "com.datacorp.dataanalyzerpro",
  "build": {
    "beforeDevCommand": "pnpm dev:tauri",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Data Analyzer Pro",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "externalBin": [
      "bin/main"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Business",
    "shortDescription": "Professional data analysis desktop app",
    "longDescription": "Data Analyzer Pro is a comprehensive desktop application that combines powerful Python data processing capabilities with a modern, intuitive user interface. Perfect for data scientists, analysts, and business professionals who need advanced data manipulation tools.",
    "copyright": "\u00a9 2024 DataCorp Solutions. All rights reserved."
  }
}